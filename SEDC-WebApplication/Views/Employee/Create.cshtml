@model EmployeeCreateViewModel
@{
    ViewBag.Title = "Add New Employee";
}

<form enctype="multipart/form-data" asp-controller="employee" method="post">
    <div class="md-form mb-5">
        <input asp-for="Name" type="text" class="form-control validate">
        <span asp-validation-for="Name" class="text-danger"></span>
        <label asp-for="Name">Employee name</label>
    </div>

    <div class="md-form">
        <input asp-for="Pol" type="text" class="md-textarea form-control" rows="4">
        <label asp-for="Pol">Gender</label>
    </div>

    <div class="md-form mb-5">
        <select asp-for="Role" type="text" class="form-control validate" asp-items="Html.GetEnumSelectList<RoleEnum>()"></select>
        <label asp-for="Role">Role</label>
    </div>

    <div class="md-form mb-5">
        <input asp-for="Email" class="form-control validate">
        <label asp-for="Email">Email</label>
    </div>

    @*<div class="md-form mb-5">

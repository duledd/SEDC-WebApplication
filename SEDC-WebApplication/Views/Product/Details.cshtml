@model ProductDetailsViewModel

<h1>@Model.PageTitle</h1>

<div class="card mb-3" style="max-width: auto;">
    <div class="row no-gutters">
        <div class="col-md-4">
            <img src="@Url.Content(Model.ProductImage)" class="card-img" alt="...">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h3 class="card-title">@Model.Name</h3>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">@Model.ProductDescription</li>
                </ul>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">@Model.Price RSD</li>
                </ul>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">@if (Model.Discounted) {<p>Discounted</p> } else { <p></p>}</li>
                </ul>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">@if (Model.Active) {<p>Active</p> } else { <p></p>}</li>
                </ul>
